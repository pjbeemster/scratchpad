<?xml version="1.0"?>

<!-- For more information on using web.config transformation visit http://go.microsoft.com/fwlink/?LinkId=125889 -->

<configuration xmlns:xdt="http://schemas.microsoft.com/XML-Document-Transform">

  <log4net xdt:Transform="Replace">
    <appender name="RollingFile" type="log4net.Appender.RollingFileAppender">
      <file value="D:/Services/FASXMLPoller/error.log" />
      <appendToFile value="true" />
      <maximumFileSize value="100KB" />
      <maxSizeRollBackups value="2" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date %level %thread %logger - %message%newline" />
      </layout>
    </appender>
    <appender name="SmtpAppender" type="log4net.Appender.SmtpAppender">
      <threshold value="ERROR"/>
      <to value="n.gibbons@amaze.com" />
      <from value="crafts@coats.com" />
      <subject value="SmtpAppender" />
      <smtpHost value="coasmtprelay.systems02.services" />
      <username value="Industrial Portal" />
      <password value="kimper@43" />
      <enablessl value="false" />
      <bufferSize value="512" />
      <lossy value="false" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%newline%date [%thread] %-5level %logger [%property{NDC}] - %message%newline%newline%newline" />
      </layout>
    </appender>
    <root>
      <!-- 1.Debug, 2.Information, 3.Warnings, 4.Error, 5.Fatal -->
      <level value="ERROR" />
      <appender-ref ref="RollingFile" />
      <appender-ref ref="SmtpAppender" />
    </root>
  </log4net>

  <applicationSettings xdt:Transform="Replace">
    <Coats.Crafts.SmartTarget.FASXmlPollerService.Properties.Settings>
      <setting name="PollingIntervalMinutes" serializeAs="String">
        <value>1</value>
      </setting>
      <setting name="IncomingDir" serializeAs="String">
        <value>D:\FASXML\Incoming</value>
      </setting>
      <setting name="ProcessedDir" serializeAs="String">
        <value>D:\FASXML\Processed</value>
      </setting>
      <setting name="RejectedDir" serializeAs="String">
        <value>D:\FASXML\Rejected</value>
      </setting>
      <setting name="PollOrRespond" serializeAs="String">
        <!--<value>Respond</value>-->
        <value>Poll</value>
      </setting>
    </Coats.Crafts.SmartTarget.FASXmlPollerService.Properties.Settings>
    <Coats.Crafts.SmartTartget.Properties.Settings>
      <setting name="FASXmlTransformXsltPath" serializeAs="String">
        <value>D:\Services\FASXMLPoller\XSLT\FAS.xslt</value>
      </setting>
    </Coats.Crafts.SmartTartget.Properties.Settings>
    <Coats.SQLite.Properties.Settings>
      <setting name="DatabaseName" serializeAs="String">
        <value>D:\FASXML\PublishedTcmIdList.s3db</value>
      </setting>
    </Coats.SQLite.Properties.Settings>
  </applicationSettings>
</configuration>