@model Coats.Crafts.Models.ComponentSearchSection

<div style="width:100%;height:auto;border:1px solid #ccc;margin:10px;padding:10px;float:left">
    <div style="width:100%;padding-top:10px;padding-bottom:10px;margin-right:10px">@Html.LabelFor(m => m.ComponentTypes.SectionTitle)</div>
    @Html.HiddenFor(m => m.ComponentTypes.SectionTitle)
    
    <div>
        @for (int i = 0; i < Model.ComponentTypes.Facets.Count; i++)
        {
            <div style="float:left;padding:10px;margin-right:10px;border:1px solid #ccc;">
                @Html.CheckBoxFor(m => m.ComponentTypes.Facets[i].Selected) 
                @Html.LabelFor(m => m.ComponentTypes.Facets[i].Selected, Model.ComponentTypes.Facets[i].Text)
            </div>
        
            @Html.HiddenFor(m => m.ComponentTypes.Facets[i].Text)
            @Html.HiddenFor(m => m.ComponentTypes.Facets[i].Value)
        }
    </div>
    <div>
        SEARCH @Html.TextBoxFor(m => m.SearchTerm) <input id="componentTypesSubmit" type="submit" value="Search >" />
    </div>
</div>
