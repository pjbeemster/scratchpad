@using Coats.Crafts.Configuration;

@model Coats.Crafts.Models.ShoppingList
		   
@{
	Layout = null;
	
	string visitorClass = (User.Identity.IsAuthenticated) ? "member" : "visitor";

	string iframeClass = (!String.IsNullOrEmpty(Request.Params["iframe"]) ? "iframe" : "");

	var appPath = HttpContext.Current.Request.ApplicationPath != "/" ? HttpContext.Current.Request.ApplicationPath : "";
    
    var rel = WebConfiguration.Current.ReleaseVersion;
    if (!String.IsNullOrEmpty(rel)) 
    {
        rel = rel.PadRight(rel.Length + 1);
    }
}
<!DOCTYPE html>
<!--[if lt IE 7]>      <html class="no-js lt-ie9 lt-ie8 lt-ie7 @visitorClass @iframeClass"> <![endif]-->
<!--[if IE 7]>         <html class="no-js lt-ie9 lt-ie8 @visitorClass @iframeClass"> <![endif]-->
<!--[if IE 8]>         <html class="no-js lt-ie9 @visitorClass @iframeClass"> <![endif]-->
<!--[if gt IE 8]><!--> <html class="no-js @visitorClass @iframeClass"> <!--<![endif]-->
<html>
<head>
	<meta charset="utf-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
	<title>@rel@ViewBag.Title</title>
	<meta name="keywords" content="" />
	<meta name="description" content="@ViewBag.Description" />
	<meta name="viewport" content="width=device-width, initial-scale=1" />
	<link rel="shortcut icon" href="../../favicon.ico" type="image/x-icon" />  
	<link rel="icon" href="../../favicon.ico" type="image/x-icon" />
	<link rel="canonical" href="" />
	@Styles.Render("~/css/boostrap")
	@Styles.Render("~/css/printshopping")
    @Scripts.Render("~/modernizr")
    
</head>
<body onload="Print();">
	<div id="wrap" class="page-container">
		<div id="main">
			<article>
				<section class="print-shopping-list">
					<div class="row-fluid pad">
						<div class="span6">
							<a href="@Url.Content("~/")"><img src="@Url.Content("~/img/logo_bw.jpg")" id="logo" alt="@Html.GetResource("MakeItCoats")" /></a>
						</div>
						<div class="span6 text-right">
							<h1>@Html.GetResource("ShoppingList")</h1>
						</div>
					</div>
					<div class="row-fluid print-shopping-list">
						<div class="span12">
						@if (Model.items != null)
						{
							if (!Model.items.Any())
							{
							<p class="no-items">
								@Html.GetResource("ShoppingListNoItems")
							</p>
							}
							else
							{      
							<table class="table" id="shopping-list">
								<thead>
									<tr>
										<th scope="col">
											@Html.GetResource("ShoppingListProject")
										</th>
										<th scope="col">
											@Html.GetResource("ShoppingListQuantity")
										</th>
										<th scope="col">
											@Html.GetResource("ShoppingListProduct")
										</th>
										<th scope="col">
											@Html.GetResource("ShoppingListBrand")
										</th>
									</tr>
								</thead>
								<tbody>
								@foreach (var s in Model.items)
								{
									var title = (!String.IsNullOrEmpty(s.Key)) ? s.Key : @Html.GetResource("AdditionalItems");
									<tr class="project">
										<td>
											@title
										</td>
										<td>
										</td>
										<td>
										</td>
										<td>
										</td>
									</tr>
									foreach (var slItem in s)
									{
									<tr>
										<td>
										</td>
										<td class="quantity-td">
											<span class="quantity">@slItem.Quantity.ToString("D2")</span>
										</td>
										<td>@slItem.ProductName
										</td>
										<td>@slItem.Brand
										</td>
									</tr>
									}
								}
								</tbody>
							</table>
							}
						}
						</div>
					</div>
					<div class="row-fluid">
						<div class="span12">
                            <!--<p class="text-right"><a href="/" title="Back to main site" class="back-to-site">Back</a></p>-->
						</div>
					</div>
				</section>
			</article>
		</div>
	</div>
	<script>

	    function Print() {
	        window.print();
	    }

	var appPath = "@(appPath)";

	// Set up Classic GA
	var _gaq = _gaq || [];
	_gaq.push(['_setAccount', 'UA-40234132-1']);
	_gaq.push(['_setDomainName', 'coatscrafts.com']);
	_gaq.push(['_trackPageview']);

	

	//	// Set up Universal GA
