@using DD4T.ContentModel;
@using DD4T.Mvc.Html;

@model IComponentPresentation

@{
    Layout = null;
    var promo = @Model.Component.Fields;

    IComponent img = null;
    
    if (promo.ContainsKey("banner"))
    {
        img = promo["banner"].LinkedComponentValues.Count > 0 ? promo["banner"].LinkedComponentValues[0] : null;
    }
}

<div class="row-fluid">
    <div class="span12">
		<div class="inline-image">
			@Html.Image(promo["banner"], new { @class = "shaded", itemprop = "image" })
            @if (img != null)
            {
                <ul class="actions">
                    <li>@{ Html.RenderPartial("~/Views/Scrapbook/AddScrapbookItemForm.cshtml", img); }</li>
                </ul>
            }
		</div>
    </div>
</div>