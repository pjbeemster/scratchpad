@using Coats.Crafts.HtmlHelpers
@model Coats.Crafts.Models.FacetedContent
@using System.Diagnostics;

@{
    Layout = null;
    
    Stopwatch sw = new Stopwatch();
    Stopwatch sw2 = new Stopwatch();
    sw.Start();
}

<!-- Maps to ComponentTypes.cshtml -->
@Html.Partial("~/Views/Partials/T3-Menu.cshtml", Model)
<!-- FacetedContent Index CT Post T3-Menu Elapsed: @sw.Elapsed.ToString() -->
<!-- Maps to FacetMap.cshtml -->
@Html.Partial("~/Views/Partials/FilterPanel.cshtml", Model)
<!-- FacetedContent Index CT Post FilterPanel Elapsed: @sw.Elapsed.ToString() -->
<!-- Maps to dropdown listbox -->
@Html.Partial("~/Views/Partials/T3-Header.cshtml", Model)
<!-- FacetedContent Index CT Post T3-Header Elapsed: @sw.Elapsed.ToString() -->
<!-- No existing view to map to: contains the actual result set -->
<!-- Render custom brand markup -->
@{
    @Html.Partial("~/Views/Partials/T3-LevelOneFilter.cshtml", Model.Brand);
                                                                                                     
	<!-- FacetedContent Index CT Post T3-LevelOneFilter Elapsed: @sw.Elapsed.ToString() -->
    sw2.Start();
    Html.RenderPartial("~/Views/Partials/T3-Isotope.cshtml", Model.ComponentList, "ComponentList");
    sw2.Stop();
	<!-- FacetedContent Index CT Post T3-Isotope Render Elapsed: @sw2.Elapsed.ToString() -->
    sw.Stop();
	<!-- FacetedContent Index CT Elapsed: @sw.Elapsed.ToString() -->
}

